@import "../../app.wxss";

page {
  background-color: #F3F2F3;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.publish-page {
  position: relative;
}

.publish-bg {
  background-image: linear-gradient(to left, #3E64FF, #47A5FC);
  height: 160px;
  border-radius: 50%;
  transform: scale(1.5);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

.navbar {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  position: sticky;
  left: 0;
  top: 0;
}

.publish-tips {
  position: sticky;
  top: 10px;
  left: 0;
  width: 100%;
  color: #ffffff;
  font-size: 24rpx;
  z-index: 100;
  display: flex;
  align-items: center;
}

.publish-tips .rule {
  margin-left: 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.content {
  position: relative;
  z-index: 1;
  overflow: auto;
  margin-top: 25px;
}

.goods-detail,
.user-detail {
  background-color: #ffffff;
  border-radius: 10px;
  margin-bottom: 12px;
  padding: 0 16px;
}


.item {
  border-bottom: 1px #E6E6E6 solid;
  height: 100rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.item picker {
  width: 100%;
}

.item input {
  display: inline-block;
  height: 30px;
  flex: 1;
  width: 40%;
  padding-left: 5px;
}

.item span {
  margin-right: 20rpx;
  display: inline-block;
  padding-left: 15px;
  position: relative;
  min-width: 65px;
  text-align: left;
}

.item span.star::after {
  position: absolute;
  color: #027AFF;
  content: "*";
  left: 0;
  font-size: 16px;
  font-weight: bold;
  top: 50%;
  transform: translateY(-50%);
}

.type-btn {
  width: 60px;
  height: 28px;
  line-height: 28px;
  text-align: center;
  border-radius: 15px;
  background-color: #f7f7f7;
  color: #999999;
  margin-right: 6px;
}

.type-btn.active {
  background-color: #027AFF;
  color: #FFFFFF;
}

.default-color {
  color: #999999;
}


.item .sort,
.item .picker,
.item .city {
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.img-item {
  width: 180rpx;
  height: 180rpx;
  background: #f3f2f3;
  border-radius: 10rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 20rpx;

}

.img-item image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.item.height-auto {
  padding: 10px 0;
  display: block;
}

.item.height-auto input,
.item.height-auto textarea {
  width: 80%;
  padding: 0 15px;
}

.xj {
  width: 180rpx;
  height: 180rpx;
  background: #f3f2f3;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.xj image {
  width: 50rpx;
}

.delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 30rpx;
  height: 30rpx;
  background: rgba(0, 0, 0, .5);
  font-size: 22rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0 10rpx 0 0;

}

.detail-imgs {
  display: flex;
  flex-wrap: wrap;
  margin-left: 15px;
}

.submit {
  background-color: #027AFF;
  width: 100%;
  line-height: 45px;
  font-size: 18px;
  border-radius: 30px;
  text-align: center;
  color: #ffffff;
  margin: 20px auto;
}

.btn-orange {
  background-color: #027AFF;
  color: #ffffff;
  border-radius: 15px;
  width: 120rpx !important;
  font-size: 12px;
  padding: 0;
  margin: 0 !important;
  height: 54rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}