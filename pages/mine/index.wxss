@import "../../app.wxss";

page {
  background-color: #f3f3f3;
  padding: 0 24rpx 24rpx 24rpx;
  height: 100%;
}

.user-page::-webkit-scrollbar {
  width: 0;
}

.user-page {
  overflow-y: scroll;
}

.user-page .user-identity>view>span:first-of-type {
  display: inline-block;
  margin-right: 30rpx;
  white-space: nowrap;
}

.company {
  width: 70%;
  flex: 1;
  display: flex;
  align-items: flex-end;
}

.company span:first-of-type {
  width: 80%;
  display: inline-block;
}

.user-info .copy-id {
  border: 1px solid #333333;
  border-radius: 6rpx;
  padding: 1px 6px;
  margin-left: 10rpx;
  font-size: 12px;
}

.attestation>view {
  border: 1px solid #333333;
  border-radius: 12rpx;
  padding: 1px 6px;
  margin-left: 16rpx;
  font-size: 10px;
}

.swiper {
  position: relative;
  border-radius: 30rpx;
  width: 70%;
  padding-top: 40%;
  overflow: hidden;
}

.swiper swipers,
.swiper>image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.handle>view {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.handle image {
  width: 25px;
  height: 25px;
}

.btn-orange {
  padding: 0;
  margin: 0 !important;
  background-color: transparent;
  font-weight: normal;
  width: 100% !important;
}

.vip-btn {
  font-size: 24rpx;
  border-radius: 10rpx;
  height: 40rpx;
  padding: 0 10rpx;
  position: relative;
  background-color: #7E8CAA;
  color: #ffffff;
}

.vip-btn.bg-1 {
  background-color: #F08700;
}

.vip-btn.bg-2 {
  background-color: #D75C36;
}

.vip-btn.bg-3 {
  background-color: #3650BF;
}