@import "../../../app.wxss";

page {
  background-color: #ffffff;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.suggest-cont {
  margin-top: 30rpx;
}

.suggest-cont form {
  flex: 1;

}

.suggest-cont textarea {
  display: inline-block;
  border: 1px solid #333333;
  box-sizing: border-box;
  width: 100%;
  border-radius: 10px;
  padding: 10rpx;
}

.suggest-cont button {
  background-color: aquamarine;
}


.suggest-img {
  margin-top: 40rpx;
}

.imgs {
  display: flex;
  margin-top: 20rpx;
}

.img-item {
  width: 150rpx;
  height: 150rpx;
  background: #f3f2f3;
  border-radius: 10rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.img-item image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.xj {
  width: 190rpx;
  height: 190rpx;
  background: #f3f2f3;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 15px;
}

.xj image {
  width: 50rpx;
}


.delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 30rpx;
  height: 30rpx;
  background: rgba(0, 0, 0, .5);
  font-size: 22rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0 10rpx 0 0;

}

.submit {
  background-color: #027AFF;
  width: 184px;
  font-size: 18px;
  border-radius: 4px;
  padding: 8px 0;
  text-align: center;
  color: #ffffff;
  margin: 20px auto;
}

.start {
  position: relative;
  white-space: nowrap;
  padding-left: 12px;
  margin-bottom: 20rpx;
}

.start::after {
  position: absolute;
  color: #027AFF;
  content: "*";
  left: 0;
  font-size: 16px;
  font-weight: bold;
  top: 50%;
  transform: translateY(-50%);
}