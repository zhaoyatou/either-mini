@import "../../app.wxss";

page {
  background-color: #ffffff;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.advice-item {
  background-color: #EBE8E8;
  border: 1px solid #797979;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.images {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.images>view {
  width: 48%;
  padding-top: 48%;
  position: relative;
}

.images image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.no-reply {
  color: #C62C2C;
  font-size: 12px;
}

.public-btn {
  position: fixed;
  right: 10px;
  top: 75%;
  color: #027AFF;
}

.public-btn image {
  width: 30px;
  height: 30px;
  margin: 0 auto;
}