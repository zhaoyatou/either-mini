@import "../../app.wxss";

page {
  background-color: #f3f3f3;
  padding: 24rpx;
}

.item>view:first-of-type {
  position: relative;
  width: 130px;
  height: 130px;
  margin-right: 30rpx;
  flex: none;
}

.item>view:first-of-type image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.item .tag {
  position: absolute;
  top: 0;
  left: 0;
}

.item>view:first-of-type>.flex-align-center {
  position: absolute;
  bottom: 0;
  width: 100%;
  border-radius: 10px;
  color: #999999;
  justify-content: flex-end;
}

.item>view:last-of-type {
  flex: 1;
  white-space: nowrap;
  width: calc(100% - 150px);
  display: flex;
  flex-direction: column;
  height: 130px;
}

.state {
  color: #027AFF;
  background-color: #CEE5FF;
  border-radius: 20rpx;
  width: 100rpx;
  height: 34rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.operation {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}

.operation>view {
  margin-right: 20rpx;
  border-radius: 20rpx;
  width: 122rpx;
  height: 54rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}

.launche {
  background-color: #FFFFFF;
  border: 1px solid #027AFF;
  color: #027AFF;
}

.update {
  background-color: #027AFF;
  border: 1px solid #027AFF;
  color: #ffffff;
}

.amend {
  background-color: #FFFFFF;
  border: 1px solid #027AFF;
  color: #027AFF;
}

.dele {
  background-color: #FFFFFF;
  border: 1px solid #FF5A5A;
  color: #FF5A5A;
}