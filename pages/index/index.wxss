@import "../../app.wxss";

page {
  background-color: #ffffff;
  padding: 0 24rpx 24rpx 24rpx;
  overflow-y: scroll;
  height: 100%;
}

page::-webkit-scrollbar {
  width: 0;
}

.banner {
  width: 100%;
  padding-top: 50%;
  position: relative;
  overflow: hidden;
}

.banner .banner-cont {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.classification {
  border-bottom: 1px solid #797979;
  margin-top: 10px;
  font-size: 26rpx;
  padding-top: 10px;
  padding-bottom: 5px;
  background-color: #ffffff;
  font-weight: bold;
  padding-left: 10px;
  border-radius: 10px 10px 0 0;
}

.class-list {
  display: flex;
  flex-wrap: wrap;
  background-color: #ffffff;
  border-radius: 0 0 10px 10px;
  padding-bottom: 10px;
}

.class-list .all image {
  border-radius: 50%;
  box-sizing: border-box;

}

.class-list>view {
  width: 20%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.class-list>view image {
  width: 85%;
  height: 100%;
  margin: 0 auto;
}

.top-banner {
  width: 100%;
  margin-top: 20rpx;
  height: 10vh;
  overflow: hidden;
}