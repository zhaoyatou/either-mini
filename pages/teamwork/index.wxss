@import "../../app.wxss";

page {
  background-color: #ffffff;
  padding: 24rpx;
  height: 100%;
  font-size: 14px;
}

scroll-view {
  width: 100%;
  height: 100%;
}

.deg90 {
  transform: rotate(90deg);
  display: inline-block;
}

.spread {
  height: 100px;
  margin-bottom: 10px;
}

.spread image {
  width: 100px;
  height: 100px;
}

.spread>view {
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin-right: 40rpx;
}

.spread-btn {
  padding: 3px 5px;
  border-radius: 10px;
  border: 1px solid #797979;
  background-color: #BFD07C;
  font-size: 14px;
  width: 110px !important;
  font-weight: normal;
}

.picker {
  border: 1px solid #797979;
  border-radius: 5px;
  padding: 3px 8px;
  font-size: 14px;
  margin-bottom: 10px;
}


input {
  border: 1px solid #797979;
  border-radius: 5px;
  width: 100px;
  margin-left: 10rpx;
  height: 30px;
  line-height: 30px;
  padding: 0 3px;
}

.search-btn {
  border: 1px solid #797979;
  border-radius: 5px;
  padding: 3px 8px;
  width: 80px;
  text-align: center;
  background-color: #07c160;
}

.item {
  border: 1px solid #797979;
  border-radius: 5px;
  margin-bottom: 10px;
  padding: 7px 10px;

}

.copy-id {
  border: 1px solid #333333;
  border-radius: 6rpx;
  padding: 1px 6px;
  margin-left: 10rpx;
  font-size: 12px;
}