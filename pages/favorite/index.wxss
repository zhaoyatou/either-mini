@import "../../app.wxss";

page {
  background-color: #f3f3f3;
  padding: 24rpx;
}

.item>view:first-of-type {
  position: relative;
  width: 130px;
  height: 130px;
  margin-right: 30rpx;
  flex: none;
}

.item .mask {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  color: #ffffff;
  background-color: rgba(0, 0, 0, .6);
  border-radius: 10px;
}

.item>view:first-of-type image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.item>view:first-of-type>.flex-align-center {
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  padding: 0 10rpx
}

.item>view:last-of-type {
  flex: 1;
  white-space: nowrap;
  width: calc(100% - 150px);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 130px;
}

.operation {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}

.operation>view {
  margin-right: 20rpx;
  border: 1px solid #333333;
  border-radius: 10rpx;
  padding: 1px 15px;
  color: #ffffff;
}

.likeness {
  background-color: #ffff00;
  color: #000000 !important;
}

.cancel {
  background-color: #ff0000;
}